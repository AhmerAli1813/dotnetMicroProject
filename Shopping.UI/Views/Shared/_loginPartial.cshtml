

<ul class="navbar-nav me-lg-2">

    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item nav-profile dropdown">
            <a class="nav-link" href="#" data-bs-toggle="dropdown" id="profileDropdown">
                <img src="..//images/faces/face5.jpg" alt="profile" />
                <span class="nav-profile-name">@User.Identity.Name</span>
            </a>
            <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">
                <a class="dropdown-item">
                    <i class="typcn typcn-cog-outline text-primary"></i>
                    Settings
                </a>
                <a class="dropdown-item" asp-area="ui" asp-action="Logout" asp-controller="Home">
                    <i class="typcn typcn-eject text-primary"></i>
                    Logout
                </a>
            </div>
        </li>
        <li class="nav-item nav-user-status dropdown">
            <p class="mb-0">Last login was 23 hours ago.</p>
        </li>
    }
    else
    {
        <li class="nav-item nav-user-status ">
            <a class="nav-link" asp-area="ui" asp-action="Login" asp-controller="Home">Login</a>
        </li>
    }
</ul>